<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="4">

            <ImageView
                android:id="@+id/home"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight=".5"
                android:src="@drawable/home" />


            <ImageView
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:paddingBottom="3dp"
                android:src="@drawable/logo_new"

                />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:src="@drawable/cart" />
            <TextView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/carttext_layout"
                android:textColor="#EA080B"
                android:id="@+id/cart_number"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/logolayout"
            android:background="@color/green">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/foodlist_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/header22"
            android:layout_below="@+id/logolayout"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subcat_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/sub_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="70dp"

            android:divider="@color/verylight_hash"
            android:dividerHeight="1dp"
            android:scrollbars="none"></ListView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottommargin"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_above="@+id/option"
        android:layout_below="@+id/moreborder1"
        android:background="@color/green"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/option"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/my_account"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/myaccnt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center">

            <Button
                android:id="@+id/order_status"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/orderstatus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:visibility="gone"
            android:gravity="center">

            <Button
                android:id="@+id/reward"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/rewards" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>


