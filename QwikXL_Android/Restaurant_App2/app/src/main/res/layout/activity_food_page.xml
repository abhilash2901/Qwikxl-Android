<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_bg">

    <LinearLayout
        android:id="@+id/logolayout"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight=".5"
            android:src="@drawable/home" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:paddingBottom="3dp"
            android:src="@drawable/logo_new"

            />

        <ImageView
            android:id="@+id/cart"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:src="@drawable/cart" />
        <TextView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/carttext_layout"
            android:textColor="#EA080B"
            android:id="@+id/cart_number"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/logolayout"
        android:background="@color/green">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/food_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/logolayout"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fod_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:gravity="center|center_horizontal"
            android:text=""
            android:textColor="@color/white"

            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_detail"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/food_layout"
        android:layout_gravity="center"
        android:background="@drawable/product_detail"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottommargin"
        android:layout_below="@+id/product_detail"
        android:scrollbarSize="10dip"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".9"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/f_image"
                            android:layout_width="250dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_launcher"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ff_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:maxLines="1"
                            android:gravity="center"
                            android:text=""
                            android:layout_weight="1"
                            android:textColor="@color/green"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/ff_price"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:textColor="@color/dark_hash"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:textColor="@color/dark_hash"
                            android:textSize="13sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:text="Available Quantity :"
                            android:textColor="@color/light_red"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/available_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:textColor="@color/light_red"
                            android:textSize="13sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/cart_new"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_gravity="left"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight=".3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:textColor="@color/dark_hash"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/quantity"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="-1dp"
                            android:background="@drawable/gridview_back"
                            android:gravity="center"

                            android:inputType="numberDecimal"
                            android:textColor="@color/light_hash" />


                        <Button
                            android:id="@+id/add_cart"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/button_back"
                            android:gravity="center"
                            android:text="+ Add to Basket"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hashmargin"
                        android:layout_width="fill_parent"
                        android:layout_height="4dp"
                        android:layout_below="@+id/cart_new"
                        android:background="@color/hash"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hashmargin"
                    android:orientation="horizontal"></LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/overview_line">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/overViewText"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="Overview"
                        android:textColor="@color/green"
                        android:textSize="15dp" />

                    <ToggleButton

                        android:id="@+id/overviewid"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/down_arrow"
                        android:textOff=" "
                        android:textOn=" " />

                </LinearLayout>

                <LinearLayout

                    android:id="@+id/overview_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/overviewtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text=""
                        android:textColor="@color/dark_hash" />
                </LinearLayout>
</LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/hash"
                    android:orientation="vertical">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/nutriinfo_line">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/nutriInfo"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="Nutrition Information"
                        android:textColor="@color/green"
                        android:textSize="15dp" />

                    <ToggleButton

                        android:id="@+id/nutriinfoTb"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/down_arrow"
                        android:textOff=" "
                        android:textOn=" "

                        />

                </LinearLayout>

                <LinearLayout

                    android:id="@+id/nutriInfo_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/nutriInfoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text=""
                        android:textColor="@color/dark_hash" />
                </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/logolayout"
                    android:background="@color/hash">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/moreinfo_line">
                <LinearLayout
                    android:id="@+id/moreborder1"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/moreinfo"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="More Information"
                        android:textColor="@color/green"
                        android:textSize="15dp" />

                    <ToggleButton

                        android:id="@+id/moreInfoId"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/down_arrow"
                        android:textOff=" "
                        android:textOn=" " />

                </LinearLayout>

                <LinearLayout

                    android:id="@+id/moreInfo_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/moreInfoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text=""
                        android:textColor="@color/dark_hash" />
                </LinearLayout>
                    </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottommargin"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_above="@+id/option"

        android:background="@color/green"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/option"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/my_account"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/myaccnt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center">

            <Button
                android:id="@+id/order_status"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"

                android:background="@drawable/orderstatus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:visibility="gone"
            android:gravity="center">

            <Button
                android:id="@+id/reward"
                android:layout_width="50dp"
                android:layout_marginBottom="2dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/rewards" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>


